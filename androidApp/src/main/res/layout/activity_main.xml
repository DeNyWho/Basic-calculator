<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_view"
        android:background = "@android:color/background_dark"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
  <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="88sp"
        android:textColor="@android:color/black"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="40sp"/>
  <TextView
          android:id="@+id/result_text"
          android:layout_width="match_parent"
          android:layout_height="100sp"
          android:textColor="@android:color/white"
          android:gravity="end"
          android:ellipsize="end"
          android:textSize="30sp"
          android:singleLine="true"/>
  <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
      <TextView
        style="@style/NumberButton"
        android:text = "AC"
        android:id="@+id/AC_btn"
      />
      <TextView
              style="@style/NumberButton"
              android:text = "("
              android:id="@+id/parenthesis1_btn"
      />
      <TextView
              style="@style/NumberButton"
              android:text = ")"
              android:id="@+id/parenthesis2_btn"
      />
      <TextView
              style="@style/NumberButton"
              android:text = "/"
              android:id="@+id/division_btn"
      />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
      <TextView
              style="@style/ActionButton"
              android:text = "7"
              android:id="@+id/seven_btn"
      />
      <TextView
              style="@style/ActionButton"
              android:text = "8"
              android:id="@+id/eight_btn"
      />
      <TextView
              style="@style/ActionButton"
              android:text = "9"
              android:id="@+id/nine_btn"
      />
      <TextView
              style="@style/NumberButton"
              android:text = "*"
              android:id="@+id/multiplication_btn"
      />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
      <TextView
              style="@style/ActionButton"
              android:text = "4"
              android:id="@+id/four_btn"
      />
      <TextView
              style="@style/ActionButton"
              android:text = "5"
              android:id="@+id/five_btn"
      />
      <TextView
              style="@style/ActionButton"
              android:text = "6"
              android:id="@+id/six_btn"
      />
      <TextView
              style="@style/NumberButton"
              android:text = "+"
              android:id="@+id/plus_btn"
      />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
      <TextView
              style="@style/ActionButton"
              android:text = "1"
              android:id="@+id/one_btn"
      />
      <TextView
              style="@style/ActionButton"
              android:text = "2"
              android:id="@+id/two_btn"
      />
      <TextView
              style="@style/ActionButton"
              android:text = "3"
              android:id="@+id/three_btn"
      />
      <TextView
              style="@style/NumberButton"
              android:text = "-"
              android:id="@+id/minus_btn"
      />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
      <TextView
              style="@style/ActionButton"
              android:text = "."
              android:id="@+id/dot_btn"
      />
      <TextView
              style="@style/ActionButton"
              android:text = "0"
              android:id="@+id/zero_btn"
      />
      <TextView
              style="@style/ActionButton"
              android:text = "del"
              android:id="@+id/back_btn"
      />
      <TextView
              style="@style/NumberButton"
              android:text = "="
              android:id="@+id/equally_btn"
      />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>